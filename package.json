{
  "name": "sleet",
  "version": "0.2.1",
  "description": "Sleetjs is little language that compiles into HTML",
  "main": "lib/sleet.js",
  "types": "./lib/sleet.d.ts",
  "bin": {
    "sleet": "bin/sleet"
  },
  "author": "Jaco Koo <jaco.koo@guyong.in>",
  "repository": {
    "type": "git",
    "url": "https://github.com/JacoKoo/sleetjs.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/node": "^10.9.2",
    "commander": "^2.9.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015-rollup": "^3.0.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "pegjs": "^0.10.0",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^4.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "peg": "pegjs -o lib/parser/syntax.js src/parser/syntax.pegjs",
    "peg-src": "pegjs -o src/parser/syntax.js src/parser/syntax.pegjs",
    "ts": "tslint src/**/*.ts && tsc",
    "dist": "rollup -c",
    "clean": "rm -rf lib dist",
    "lib": "npm-run-all ts peg",
    "build": "npm-run-all clean lib peg-src dist"
  }
}
