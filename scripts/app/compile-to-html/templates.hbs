{{#module}}<div class="container">
    <h3>Try Sleet Online</h3>
    <div class="left" data-region="input"></div>
    <div class="right" data-region="output"></div>
</div>{{/module}}
{{#view "input"}}
    <div id="input" class="input">{{code.input}}</div>
{{/view}}
{{#view "output"}}
    <div id="result" class="output {{#if code.haveError}}error{{/if}}">{{code.output}}</div>
{{/view}}