{{#module}}<div class="container">
    <h3>Try Sleet Online</h3>
    <div class="left" data-region="input"></div>
    <div class="right" data-region="output"></div>
</div>{{/module}}
{{#view "input"}}
    <p>
        Type 
        <span id="from">{{state.from}} </span>
        <a id="reverse" href="javascript:;">[Reverse]</a>
    </p>
    <div id="input" class="input">{{input}}</div>
{{/view}}
{{#view "output"}}
    <p>Compiles to <span id="to">{{state.to}}</span></p>
    <div id="result" class="output {{#if code.haveError}}error{{/if}}">{{output}}</div>
{{/view}}